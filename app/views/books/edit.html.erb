<h2>Editing Book</h2>

<div class="editerror">
 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
  <% end %>
</div>

<%= form_with model: @book,url:update_book_path(@book.id),method: :patch do |f| %>

<div class="editpost">
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

</div>

<%= f.submit 'Update Book',class:'updatebook' %>

<% end %>

<div class="edits">
<%= link_to 'Show',"/books/#{@book.id}" %>

<p>|</p>

<%= link_to 'Back',"/books" %>

</div>