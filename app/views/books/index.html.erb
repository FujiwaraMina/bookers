<h1>Books</h1>

<main>

  <% @books.each do|book| %>
  <p>Title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>
  <% end %>

　<%= link_to 'Show',/book_path(@book) %>

</main>

<div class="form">
　<%= form_with model: @book do |f| %>
　<h2>New book</h2>

　<h4>Title</h4>
　 <%= f.text_field:title %>

　 <h4>Body</h4>
　 <%=f.text_area:body,class:'textarea' %>

　 <%= f.submit 'Create Book',class:'createbook' %>
　<% end %>
</div>