

<h1>Books</h1>

<main>

  <div class="title">
   <p><b>Title</b></p>
   <% @books.each do|book| %>
   <span><%= book.title %></span>
   <% end %>
  </div>

  <div class="body">
   <p><b>Body</b></p>
   <% @books.each do|book| %>
   <span><%= book.body %></span>
   <% end %>
  </div>

  <div class="post">
   <% @books.each do|book| %>
   <%= link_to 'Show',"/books/#{book.id}" %>
   <%= link_to 'Edit',edit_book_path(book.id) %>
   <%= link_to 'Delete',destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
   <% end %>
  </div>

  </main>




<div class="form">
　<%= form_with model: @book do |f| %>
　<h2>New book</h2>

　<h4>Title</h4>
　 <%= f.text_field:title %>

　 <h4>Body</h4>
　 <%=f.text_area:body,class:'textarea' %>

　 <%= f.submit 'Create Book',class:'createbook' %>
　<% end %>
</div>