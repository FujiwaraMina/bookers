<h1>Books</h1>

<table>
  <thead>
   <tr>
    <th class="title">Title</th>
    <th class="body">Body</th>
   </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
    <td class="break"><%= book.title %></td>
    <td class="break"><%= book.body %></td>
    <td><%= link_to 'Show',book_path(book.id) %></td> <!--"/books/#{@book.id}"-->
    <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy',book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
   </tr>
    <% end %>
  </tbody>
</table>


 <h2>New book</h2>

 <div class="error">
 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
  <% end %>
 </div>

<div class='form'>
　<%= form_with model: @book do |f| %>

　<h4>Title</h4>
　 <%= f.text_field:title %>

　 <h4>Body</h4>
　 <%=f.text_area:body,class:'textarea' %>

　 <%= f.submit 'Create Book',class:'createbook' %>
　<% end %>
</div>