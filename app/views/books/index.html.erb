<h1>Books</h1>

<main>
  <p>Title</p>
  <p>Body</p>
  </main>

  <div class="post">
  <% @books.each do|book| %>
  <span><%= book.title %></span>

  <span><%= book.body %></span>

  <%= link_to 'Show',"/books" %>
  <%= link_to 'Edit',"/books" %>
  <%= link_to 'Delete',"/books" %>
  <% end %>
  </div>


<div class="form">
　<%= form_with model: @book do |f| %>
　<h2>New book</h2>

　<h4>Title</h4>
　 <%= f.text_field:title %>

　 <h4>Body</h4>
　 <%=f.text_area:body,class:'textarea' %>

　 <%= f.submit 'Create Book',class:'createbook' %>
　<% end %>
</div>